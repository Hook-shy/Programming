@{
    Layout = null;
}
<!doctype html>
<html lang="zh-cn">

<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/index_match.css">
    <link rel="shortcut icon" href="images/lk_logo.png" type="image/x-icon">
</head>

<body>
    <!--------------------头部-begin------------------------------>
    <header id="lk_header">
        <nav class="navbar navbar-expand-lg navbar-light navbar-lk " id="navbar-example">
            <div class="container">
                <div class="d-none d-sm-none d-md-block d-lg-block">
                    <a class="navbar-brand d-flex justify-content-center align-items-center" href="#">
                        <img src="~/image/lk_logo.png" alt="">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="lk_nav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">首页 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#bsxq">比赛详情</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#phb">排行榜</a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown show navbar-btn">
                    <div class="container">
                        <div class="row">
                            <!-- 未登录状态 -->
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" id="signbutton" data-target="#exampleModal" data-whatever="@@mdo">报名参赛</button>
                            <!-- 登录状态 -->
                            <a href="#" id="userimg" style="display: none;">
                                <img src="~/image/hand.png" class="img-circle img2" alt="">
                            </a>
                            <!-- 姓名 -->
                            <div class="dropdown show mt-2" id="usernamediv" style="display: none;">
                                <a class=" dropdown-toggle btn-sm" href="#" id="username" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">123</a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#" onclick="logout()">退出</a>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">
                                        请完善以下信息
                                        <span class="text-danger">（不可修改）</span>
                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form id="form1" action="/pys/r_sign.py" method="POST" onsubmit="return check()">
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="recipient-name" class="col-form-label">姓名：</label>
                                            <input type="text" class="form-control" id="recipient-name" name="name">
                                        </div>
                                        <div class="form-group">
                                            <label for="message-text" class="col-form-label">学号：</label>
                                            <input type="text" class="form-control" id="message-text" name="num">
                                        </div>
                                        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">班级：</label>
                                        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="cla">
                                        </select>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                                        <button type="submit" class="btn btn-primary">提交</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#lk_nav" aria-controls="lk_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <!--------------------头部-end------------------------------>
    <!--------------------轮播图-begin------------------------------>
    <section id="lk_carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#lk_carousel" data-slide-to="0" class="active"></li>
            <li data-target="#lk_carousel" data-slide-to="1"></li>
            <li data-target="#lk_carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active" data-sm-img="https://s1.ax1x.com/2020/04/26/J6OHSA.jpg" data-lg-img="https://s1.ax1x.com/2020/04/26/J6Ojw8.jpg"></div>
            <div class="carousel-item" data-sm-img="https://s1.ax1x.com/2020/04/26/J6ObQI.jpg" data-lg-img="https://s1.ax1x.com/2020/04/26/J6OTWd.jpg"></div>
            <div class="carousel-item" data-sm-img="https://s1.ax1x.com/2020/04/26/J6OLOP.jpg" data-lg-img="https://s1.ax1x.com/2020/04/26/J6OvTS.jpg"></div>

        </div>
        <a class="carousel-control-prev" href="#lk_carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#lk_carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </section>
    <!-----------------------轮播图end--------------------------->
    <!--------------------正式比赛begin------------------------------>
    <section id="form_race">
        <!--标题-->
        <div class="text-center mt-3 mb-3">
            <h5><strong>正式比赛</strong></h5>
            <img src="~/image/star.png" alt="">
        </div>
        <!-- 比赛规则和答题按钮 -->
        <div class="container" id="match-rule-block">
            <div class="row justify-content-center align-items-center">
                <h6 class="text-success">比赛规则</h6>
                <p class="p-3">
                    参赛者有5次答题机会，每次答题会从题库中抽取10道题目，共有50道题。每个题目对应2个积分，参赛者答对题目则得分，答错则没有分数，个人成绩以5次答题后的总得分为最终成绩。得分情况会在排行榜里显示。
                </p>
                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#" id="match-btn">开始比赛</button>
            </div>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">比赛规则</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>你有十分钟的时间回答比赛单选题/多选题/判断题和填空题，祝你好运！</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">我知道了</button>
                        <button type="button" class="btn btn-primary" id="start_match">开始答题</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 我的成绩 -->
        <div class="container" id="my-score-block">
            <div class="row justify-content-center align-items-center text-center">
                <h5>我的成绩</h5>
                <div class="container">
                    <div class="row">
                        <div class="col-3">
                            <p>
                                <h4 class="text-warning" id="card-order">0</h4>
                            </p>
                            <p>
                                <h6>排名</h6>
                            </p>
                        </div>
                        <div class="col-3">
                            <p>
                                <h4 class="text-success" id="card-score">0</h4>
                            </p>
                            <p>
                                <h6>分数</h6>
                            </p>
                        </div>
                        <div class="col-3">
                            <p>
                                <h4 class="text-primary" id="card-time">00:00:00</h4>
                            </p>
                            <p>
                                <h6>用时</h6>
                            </p>
                        </div>
                        <div class="col-3">
                            <p>
                                <h4 class="text-secondary" id="card-count">0/0</h4>
                            </p>
                            <p>
                                <h6>答题次数</h6>
                            </p>
                        </div>

                    </div>
                </div>
                <button class="btn btn-primary " id="continue-match">继续比赛</button>
            </div>
        </div>

    </section>
    <!--------------------正式比赛end------------------------------>
    <!--------------------赛前练习-begin------------------------------>
    <section id="lk_hot">
        <!--标题-->
        <div class="text-center mt-3 mb-3">
            <h5><strong>赛前练习</strong></h5>
            <img src="~/image/star.png" alt="">
        </div>
        <!--内容-->
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 ">
                    <div class="media d-flex align-items-center m-1 mb-3 aa p-2" id="entrance1" style="cursor:pointer;">
                        <div class="media-left mr-2">
                            <img src="~/image/yjh.png" alt="" class="media-object rounded-circle img-fluid img-thumbnail" width="100">
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                <span class="text-warning" id="scq-count">【热】</span> 单选题
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 ">
                    <div class="media d-flex align-items-center m-1 mb-3 aa p-2 " id="entrance2" style="cursor:pointer;">
                        <div class="media-left mr-2">
                            <img src="~/image/js.png" alt="" class="media-object rounded-circle img-fluid img-thumbnail" width="100">
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                <span class="text-danger" id="mcq-count">【战】</span>多选题
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="media d-flex align-items-center m-1 mb-3 aa p-2" id="entrance3" style="cursor:pointer;">
                        <div class="media-left mr-2">
                            <img src="~/image/wzs.png" alt="" class="media-object rounded-circle img-fluid img-thumbnail" width="100">
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                <span class="text-primary" id="tfq-count">【新】</span> 判断题
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="media d-flex align-items-center m-1 mb-3 aa p-2" id="entrance4" style="cursor:pointer;">
                        <div class="media-left mr-2">
                            <img src="~/image/yy.png" alt="" class="media-object rounded-circle img-fluid img-thumbnail" width="100">
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                <span class="text-success" id="cq-count">【战】</span> 填空题
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-------------------赛前练习-end------------------------------>
    <!--------------------比赛详情-begin------------------------------>
    <section id="bsxq">
        <!--标题-->
        <div class="text-center mt-5 mb-5">
            <h5><strong>比赛详情</strong></h5>
            <img src="~/image/star.png" alt="">
        </div>
        <!-- 修改 -->
        <div class="container">
            <div class="card text-left">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs justify-content-center" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">比赛流程</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">活动目的</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">奖项设置</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h5 class="card-title">练习答题环节<br><small class="text-success">(04-27 10:00 ~ 05-03 22:00)</small></h5>
                        <p class="card-text">
                            1. 题目按四个类型分类：单选/多选/判断/填空，四个类型分别对应四个关口。<br>
                        </p>
                        <p class="card-text">
                            2. 正式竞赛开始前，每个关口涵盖的是竞赛端口内所包含的各类型题目，学生可以在各种类型的题目关口自行练习题目，关口会记录练习时长和练习数量。
                        </p>
                        <p class="card-text">
                            3. 系统练习排名依据：min(练习时间, 练习数量 x 10)
                        </p>
                        <h5 class="card-title">竞赛答题环节<br><small class="text-success">(05-04 10:00 ~ 05-07 22:00)</small></h5>
                        <p class="card-text">
                            1.竞赛答题开始后，练习答题的端口将会关闭，参赛者有5次答题机会，每次答题会从题库中抽取5个选择题，3个判断题，2个填空题，以供作答。<br>
                        </p>
                        <p class="card-text">
                            2. 每个题目对应2个积分。参赛者答对题目则积累积分，答错则没有积分，个人成绩以5次答题后的总积分为最终成绩。
                        </p>
                        <p class="card-text">
                            3. 系统竞赛排名依据：竞赛总得分 x 10000 - 竞赛所用总时间
                        </p>
                        <h5 class="card-title">排名</h5>
                        <p class="card-text">
                            学生于竞赛期间内完成线上答题。主办方根据学院参与人数进行综合排名。
                        </p>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                        <p class="card-text">
                            &nbsp;在疫情防控期间，全体高校学生遵照学校要求，在家待命等候学校通知。信息学院团委意识到需要在此期间督促和倡导学生们“即使宅在家中也要自主学习”的必要性，因此为了促使学生们更加积极的投入学习，营造学院良好的学习氛围，掀起学院学生们的学习热潮。云南财经大学信息学院团委组织举办了本次线上知识竞赛活动。
                        </p>

                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <h5 class="card-title">智慧之星</h5>
                        <p class="card-text">
                            竞赛答题环节结束后，得分排名在全体参与人员前5%的同学

                        </p>
                        <h5 class="card-title">知识之星</h5>
                        <p class="card-text">
                            竞赛答题环节结束后，得分排名全体参与人员前25%-5%的同学

                        </p>
                        <h5 class="card-title">好学之星</h5>
                        <p class="card-text">
                            练习答题环节开启期间，练习答题练习排名前30的同学

                        </p>
                        <h5 class="card-title">最佳组织奖</h5>
                        <p class="card-text">
                            竞赛答题环节结束后，班级平均分和班级参与人员总体排在前3的班级体。评价标准按照班级平均分占60%，班级参与人员占40%的原则
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!--------------------比赛详情-end------------------------------>
    <!--------------------排行榜—-begin------------------------------>

    <section id="phb">
        <!--标题-->
        <div class="text-center mt-5 mb-5">
            <div class="text-center mt-5 mb-5">
                <!-- Example split danger button -->
                <div class="btn-group mb-1">
                    <h5><strong>排行榜</strong></h5>
                </div>
                <div><img src="~/image/star.png" alt=""></div>
            </div>
            <!-- 滚动条容器 -->
            <div class="container">
                <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" style="border-radius:50px;" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">练习排名</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="border-radius:50px;" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">竞赛排名</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="border-radius:50px;" id="pills-class-tab" data-toggle="pill" href="#pills-class" role="tab" aria-controls="pills-class" aria-selected="false">班级竞赛排名</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div class="personal_rank table-responsive">
                            <table class="table table-bordered text-center table-hover">
                                <thead>
                                    <tr class="thead-light">
                                        <th scope="col">名次</th>
                                        <th scope="col">姓名</th>
                                        <th scope="col">练习数量</th>
                                        <th scope="col">练习时长</th>
                                    </tr>
                                </thead>
                                <tbody class="pre-scroller " id="p_ranklist">
                                </tbody>
                            </table>
                            <span id="p_ranklist_count"></span>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <div class="personal_rank table-responsive">
                            <table class="table table-bordered text-center table-hover">
                                <thead>
                                    <tr class="thead-light">
                                        <th scope="col">名次</th>
                                        <th scope="col">姓名</th>
                                        <th scope="col">分数</th>
                                        <th scope="col">答题时间</th>
                                        <th scope="col">次数</th>
                                    </tr>
                                </thead>
                                <tbody class="pre-scroller " id="m_ranklist">
                                </tbody>
                            </table>
                            <span id="m_ranklist_count"></span>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-class" role="tabpanel" aria-labelledby="pills-class-tab">
                        <div class="personal_rank table-responsive">
                            <table class="table table-bordered text-center table-hover">
                                <thead>
                                    <tr class="thead-light">
                                        <th scope="col">名次</th>
                                        <th scope="col">班级</th>
                                        <th scope="col">参与人数</th>
                                        <th scope="col">平均分</th>
                                    </tr>
                                </thead>
                                <tbody class="pre-scroller " id="c_ranklist">
                                </tbody>
                            </table>
                            <span id="c_ranklist_count"></span>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    <!--------------------排行榜-end------------------------------>
    <!--------------------尾部-begin------------------------------>
    <footer id="lk_footer">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-lg-12 text-center">
                    <h6>主办方：云南财经大学信息学院学生会</h6>
                    <h6>
                        QQ群：887553295
                        <a target="_blank" href="//shang.qq.com/wpa/qunwpa?idkey=6e06cc1bb4b15258edeaf3c5ad65c325e53a7d03893ab4c8665610d369000889"><img border="0" src="//pub.idqqimg.com/wpa/images/group.png" alt="线上知识竞赛" title="线上知识竞赛"></a>
                    </h6>
                    <h6>技术支持：电脑爱好者协会</h6>
                </div>

            </div>
        </div>
    </footer>
    <!--------------------尾部-end------------------------------>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/popper.js.1.14.0/content/Scripts/popper.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/js/index_match.js"></script>
</body>

</html>